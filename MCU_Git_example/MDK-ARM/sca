void Delay1us(void)
{
  for(uint32_t counter = 0;counter<4;counter++)
  __NOP;
}

void Delay3us(void)
{
  for(uint32_t counter = 0;counter<2;counter++)
  for(uint32_t counter1 = 0;counter1<11;counter1++)
  __NOP;
}

void Delay5us(void)
{
  for(uint32_t counter = 0;counter<4;counter++)
  for(uint32_t counter1 = 0;counter1<10;counter1++)
  __NOP;
}
void Delay10us(void)
{
  for(uint32_t counter = 0;counter<8;counter++)
  for(uint32_t counter1 = 0;counter1<10;counter1++)
  __NOP;
}
void Delay100us(void)
  {
  for(uint32_t counter = 0;counter<79;counter++)
  for(uint32_t counter1 = 0;counter1<11;counter1++)
  __NOP;
}